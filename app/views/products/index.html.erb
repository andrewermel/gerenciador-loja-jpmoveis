<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Recommended price</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.recommended_price %></td>
        <td><%= product.product_type.name %></td>
        <td><%= link_to 'Mostrar', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Deletar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Produto', new_product_path %>

<div>
  <%= link_to 'Tipos de produtos', product_types_path %>
</div>

<div>
  <%= link_to 'Transações', transactions_path %>
</div>

<div>
  <%= link_to 'Inventário', inventories_path %>
</div>

<div>
  <%= link_to 'Usuários', users_path %>
</div>




