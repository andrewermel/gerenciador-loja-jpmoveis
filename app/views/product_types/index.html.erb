<p id="notice"><%= notice %></p>

<h1>Product Types</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_types.each do |product_type| %>
      <tr>
        <td><%= product_type.name %></td>
        <td><%= link_to 'Mostra', product_type %></td>
        <td><%= link_to 'Editar', edit_product_type_path(product_type) %></td>
        <td><%= link_to 'Deletar', product_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar tipo de produto', new_product_type_path %>

<div>
  <%= link_to 'Produtos', products_path %>
</div>

