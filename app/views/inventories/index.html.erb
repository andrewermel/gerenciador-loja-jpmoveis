<p id="notice"><%= notice %></p>

<h1>Inventario</h1>

<table>
  <thead>
    <tr>
      <th>Quantidade</th>
      <th>Produto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.quantity %></td>
        <td><%= inventory.product.product_type.name %> - <%= inventory.product.name %></td>
        <td><%= link_to 'Mostra', inventory %></td>
        <td><%= link_to 'Editar', edit_inventory_path(inventory) %></td>
        <td><%= link_to 'Deletar', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <%= link_to 'transação', transactions_path %>
</div>

<div>
  <%= link_to 'Inventario', inventories_path %>
</div>

<div>
  <%= link_to 'Produtos', products_path %>
</div>
